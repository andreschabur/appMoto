
<!--Inicio hacer que el estilo del carrusel aparezca como un slide de imagenes de album-->
<style>
.carousel-indicators li {
    cursor: pointer;
    text-indent: 0;
    background-color: #C8C8C8;
    border: 1px solid #EEEEEE;
    border-radius: 10px; 
    display: inline-block;
    height: 10px;
    margin: 50px; 
    width: 10px;
}

.carousel-indicators {
    bottom: 40px;
    left: 50%;
    list-style: none outside none;
    margin-left: -40%;
    padding-left: 0;
    position: absolute;
    text-align: center;
    width: 70%;
    z-index: 15;
}
.containerCarrusel {
    width: 710px;
}
.carousel {
    height: 700px;
}
.carousel .item {
    height: 460px;
}
</style>
{% set altoImagen = 450 %}
{% set anchoImagen = 600 %}
<!--Fin hacer que el estilo del carrusel aparezca como un slide de imagenes de album-->
<fieldset style="margin: 20px">
        <legend><font color="green">Datos del producto</font></legend>
        <div class="containerCarrusel">    
    
    {% set cantidadFotos = producto.productsImagesCollection|length %}
    {% set contadorFotos = 0 %}
    <!-- Carousel================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
      <!-- Indicators -->
      <ol class="carousel-indicators">        
            {#% for contadorFotos in 0..cantidadFotos %#}
            {% for productsImages in producto.productsImagesCollection %}
                <li data-target="#myCarousel" data-slide-to="{{ contadorFotos }}">
                    <img width="100" height="100"  src="{{app.request.basepath}}/{{ productsImages.getWebPath }}">
                </li>        
                {% set contadorFotos = 1 + contadorFotos %}
            {% endfor %}
            <li data-target="#myCarousel" data-slide-to="{{ contadorFotos }}" class="active">
                <img width="100" height="100"  src="{{app.request.basepath}}/{{ producto.getWebPath }}">
            </li>
      </ol>
      {% set contadorFotos = 1 %}
      <div class="carousel-inner">
              
 {% for productsImages in producto.productsImagesCollection %}                  
        {% if contadorFotos == 1  %}
            <div class="item active">
          {% else %}
            <div class="item">
          {% endif %}
