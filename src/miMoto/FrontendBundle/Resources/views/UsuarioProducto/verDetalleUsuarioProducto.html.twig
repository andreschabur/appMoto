                            {#<img class="lazy" width="{{ anchoImagen }}" height="{{ altoImagen }}"  src="{{app.request.basepath}}/{{ productsImages.getWebPath }}"> #}
                            <img class="lazy" width="{{ anchoImagen }}" height="{{ altoImagen }}"  data-original="{{app.request.basepath}}/{{ productsImages.getWebPath }}">                  
                      {% endif %}
                      </span>
                </span>
            </div>
          </div>
        </div>
    {% set contadorFotos = 1 + contadorFotos %}
