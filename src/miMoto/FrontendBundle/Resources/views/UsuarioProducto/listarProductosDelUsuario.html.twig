<fieldset style="margin: 20px">
{#        <legend><font color="green">Mis Mascotas</font></legend>#}
        <div class="rcorners2">
            <div class="rcornersFull">
                <b>Mascotas</b>
            </div>
{#            <table class="table-responsive table-bordered table-striped" style="margin: 15px;">#}
            <table class="table-responsive tabla-cebreada bordeAzul" style="margin: 15px;">
            {#<table style="margin: 10px;" class="tablaRejilla">  #}
                <thead>
                <th><b>Editar/Ver</b></th> 
                <th><b>Edad</b></th>
                <th><b>Precio</b></th>     
                <th><b>Disponible hasta</b></th>
                <th><b>Tipo Mascota</b></th>
                <th><b>Raza</b></th>
                <th><b>Comentario</b></th>
                <th><b>Imagen Principal</b></th>
                <th><b>Estado</b></th>
                <th><b>Accion</b></th>                
                </thead>
                <tbody>
                {% for producto in productos %}                

    
                    <tr>
                        <td class="bordeAzul">                                   
                            <ul>
                                <!-- <li>
                                     <a href="{ { path('solicitud_show', { 'id': entity.id }) }}">ver</a>
                                 </li>-->
                                 <li>
                                     <a href="{{ path('producto_editar', { 'id': producto.productsId }) }}">Editar</a>
                                 </li>
                                 <li>
                                     <a href="{{ path('producto_ver', { 'id': producto.productsId }) }}">Ver</a>
                                 </li>
                             </ul>
                        </td>
                        <td class="bordeAzul">                        
                            <span> {{ producto.anio }} </span>                        
                        </td>
                        <td class="bordeAzul">                        
                            <span> {{ producto.productsPrice }} </span>                        
                        </td>
                        <td class="bordeAzul">                                                    
                            <span> {{ producto.productsDateAvailable|date("Y/m/d") }} </span>                        
                        </td>
                        <td class="bordeAzul">                                                    
                            <span> {{ producto.manufacturersId }} </span>                        
                        </td>
                        <td class="bordeAzul">                                                    
                            <span> {{ producto.cilindrajeId }} </span>                        
                        </td>
                        <td class="bordeAzul">                                                    
                            <span> {{ producto.observacion }} </span>                        
                        </td>
                        <td class="bordeAzul">                                                    
                            <span> <img width="100" height="100"  src="{{app.request.basepath}}/{{ producto.getWebPath }}"> </span>                        
                        </td>
                        <td class="bordeAzul">                                                    
                            <span> 
                                {{ producto.productsStatus ? 'Activo' : 'Inactivo' }}
                            </span>                        
                        </td>
                        <td class="bordeAzul">                                                    
                            <span> 
                                <a>Re-Activar*</a>
                            </span>                        
                        </td>
                    </tr>                                   
            
                {% endfor %}
                </tbody>
            </table>
        </div>
</fieldset>
